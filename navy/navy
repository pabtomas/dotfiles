cols ()
{
  local tty
  tty="$(command readlink -f "${navy_tty}")"
  COLUMNS="$(command stty -F "${tty}" size | command cut -d ' ' -f 2)"
  COLUMNS="${COLUMNS:-"$(command tput cols)"}"
}

logs ()
{
  local first_max_length_line max_line_length does_line_has_enought_chars eol
  cols

  if not str empty "${1:-}"
  then
    first_max_length_line="$(printf "%$(( ${COLUMNS} + ${#navy_bold} + ${#navy_cyan} + ${#navy_reset} - 9 ))s" | command tr ' ' '.')"
    does_line_has_enought_chars="$(printf "%$(( ${COLUMNS} - 9 ))s" | command busybox sed 's/ /\[^\\n]/g')"
    max_line_length="$(printf "%$(( ${COLUMNS} - 9 ))s" | command tr ' ' '.')"
    set -f
    command busybox sed "/^${navy_rawlevel}/ {
                           b exit;
                         }
                         s@^${navy_errorlevel}@${navy_red}ERROR ${navy_reset}@;    t header;
                         s@^${navy_warnlevel}@${navy_yellow} WARN ${navy_reset}@;  t header;
                         s@^${navy_infolevel}@${navy_green} INFO ${navy_reset}@;   t header;
                         s@^${navy_notelevel}@${navy_cyan} NOTE ${navy_reset}@;    t header;
                         s@^${navy_debuglevel}@${navy_blue}DEBUG ${navy_reset}@;   t header;
                         s@^${navy_tracelevel}@${navy_purple}TRACE ${navy_reset}@; t header;
                         s@^${navy_verblevel}@${navy_pink} VERB ${navy_reset}@;
                :header; s@^@${navy_bold}@;                                        t reset_T_smaller;
       :reset_T_smaller; s@^${first_max_length_line}@&\n@;                         T smaller; t loop;
                  :loop; s@\n\$@@;                                                 t equal;
                         h;
                         s@\(.\)\n.*@\1@;
                         p;
                         g;
                         s@.*\n@@;
                         s@^@      @;                                              t reset_t_loop;
          :reset_t_loop; /${does_line_has_enought_chars}$/ {
                           s@^${max_line_length}@\0\n@;                            t loop;
                         };
                 :equal;
               :smaller;
                  :exit;" ${1}

    command rm -f ${1}
    set +f
  elif not str empty "${2:-}"
  then
    eol="${navy_esc}[${COLUMNS}G"
    printf '%b%b' "${navy_previous}" "${eol}"
  fi
}

_stop ()
{
  local entries
  entries="$(command find "${navy_stops}" -mindepth 1 -maxdepth 1 -type l)"

  if not str empty "${entries:-}"
  then
    set -f
    command rm -f ${entries} $(command readlink -f ${entries})
    set +f
  fi
}

logger ()
{
  trap 'navy_loggerstart=1' USR1

  add_style
  add_time

  local field_logs field_spins logs_entries spins_entries arg_max
  field_logs="$(printf '%s//\n' "${navy_lines}" | command grep -o '/' | command grep -c '/')"
  field_spins="$(printf '%s//\n' "${navy_spins}" | command grep -o '/' | command grep -c '/')"
  arg_max="$(( $(command getconf ARG_MAX) / 4 - 1 ))"

  while str empty "${navy_loggerstart:-}"; do command usleep 10; done

  trap 'navy_loggerstop=1' USR1

  printf '%b' "${navy_hidecursor}"

  while str empty "${navy_loggerstop:-}" || command find "${navy_lines}" -mindepth 1 -maxdepth 1 -type f | read dummy
  do
    # TODO: logs_entries="$(command find "${navy_lines}" -not -name '[^0-9]*' -path "${navy_lines}/[0-9]*" -mindepth 1 -maxdepth 2 -type f | command sort -n -t '/' -k "${field_logs}" -k "$(( ${field_logs} + 1 ))" | command busybox head -n "${arg_max}")"
    logs_entries="$(command find "${navy_lines}" -mindepth 1 -maxdepth 1 -type f | command sort -n -t '/' -k "${field_logs}" | command busybox head -n "${arg_max}")"
    spins_entries="$(command find "${navy_spins}" -mindepth 1 -maxdepth 1 -type f | command sort -n -t '/' -k "${field_spins}" | command busybox xargs -I % cat %)"
    logs "${logs_entries:-}" "${spins_entries:-}" | spins "${spins_entries:-}" 1>&2
    if str empty "${navy_loggerstop:-}"; then _stop; fi
  done

  printf '%b' "${navy_showcursor}"
}

##############################################################################
#################################   LISTENER   ###############################
##############################################################################

stop_req ()
{
  command mv "${navy_aliases}/${1#"${navy_stopreq}"}" "${navy_stops}/${2}"
}

spin_req ()
{
  local line i alias ts
  line="${1#"${navy_spinreq}${navy_reqsep}"}"
  i="${2}"
  alias="${line%%"${navy_reqsep}"*}"
  line="${line#*"${navy_reqsep}"}"
  ts="$(command date '+%s%N')"
  printf '
s@^\(.*\) \(define spin_title (index) {\)\([^}]*\)} \([0-9]*\)$@\\1 spins_nts [\\4] = %s; \\2\\3if (index == \\4) print "%s"; } \\4@;

                          t d%d;
:d%d; s@9\(_*\)$@_\\1@;   t d%d;

      s@ \(_\+\)$@ 1\\1@; t n%d;
      s@8\(_*\)$@9\\1@;   t n%d;
      s@7\(_*\)$@8\\1@;   t n%d;
      s@6\(_*\)$@7\\1@;   t n%d;
      s@5\(_*\)$@6\\1@;   t n%d;
      s@4\(_*\)$@5\\1@;   t n%d;
      s@3\(_*\)$@4\\1@;   t n%d;
      s@2\(_*\)$@3\\1@;   t n%d;
      s@1\(_*\)$@2\\1@;   t n%d;
      s@0\(_*\)$@1\\1@;   t n%d;

:n%d; s@_\(_*\)$@0\\1@;   t n%d;
' "${ts%???}" "$(printf '%s' "${line}" | command busybox sed -e 's@\\@\\\\@g; s@"@\\q@g')" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" "${i}" >> "${navy_spins}/${i}"
  command ln -f -s "${navy_spins}/${i}" "${navy_aliases}/${alias}"
}

buffer_req ()
{
  local line alias i dir
  line="${1#"${navy_bufreq}${navy_reqsep}"}"
  i="${2}"
  alias="${line%%"${navy_reqsep}"*}"
  line="${line#*"${navy_reqsep}"}"
  if is sym "${navy_aliases}/${alias}"
  then dir="$(command readlink -f "${navy_aliases}/${alias}")"
  else
    dir="$(command mktemp -d -p "${navy_lines}")"
    command ln -f -s "${dir}" "${navy_aliases}/${alias}"
  fi
  printf '%s\n' "${line}" > "${dir}/${i}"
}

flush_req ()
{
  local line alias i dir
  line="${1#"${navy_flushreq}${navy_reqsep}"}"
  i="${2}"
  alias="${line%%"${navy_reqsep}"*}"
  line="${line#*"${navy_reqsep}"}"
  dir="$(command readlink -f "${navy_aliases}/${alias}")"
  command mv -f "${dir}" "${navy_lines}/${i}"
  command rm -f "${navy_aliases}/${alias}"
}

logging_req ()
{
  printf '%s\n' "${1}" | command ansi2txt > "${navy_lines}/${2}"
}

unknown_req ()
{
  printf '0Unknown logger request: "%s"\n' "${1}" > "${navy_lines}/${2}"
  return 1
}

empty_req ()
{
  printf '%s\n' "${PS4}" > "${navy_lines}/${1}"
}

listener ()
{
  local line i
  until is sym "${navy_tty}"     && \
        is dir "${navy_lines}"   && \
        is dir "${navy_spins}"   && \
        is dir "${navy_aliases}" && \
        is dir "${navy_stops}"; do command usleep 10; done
  # TODO: remove loop with sed + bc script ???
  while read -r line
  do
    i="$(( ${i:--1} + 1 ))"
    if str empty "${line}"; then empty_req "${i}"; continue; fi
    case "${line}" in
    ( ["${navy_errorlevel}"-"${navy_verblevel}${navy_rawlevel}"]* ) logging_req "${line}" "${i}" ;;
    ( "${navy_spinreq}${navy_reqsep}"* )  spin_req "${line}" "${i}"    ;;
    ( "${navy_stopreq}"* )                stop_req "${line}" "${i}"    ;;
    ( "${navy_bufreq}${navy_reqsep}"* )   buffer_req "${line}" "${i}"  ;;
    ( "${navy_flushreq}${navy_reqsep}"* ) flush_req "${line}" "${i}"   ;;
    ( * ) unknown_req "${line}" "${i}" ;;
    esac
  done
}

##############################################################################
##################################   RUNNER   ################################
##############################################################################

_send ()
{
  if str empty "${cat:-}" && eq "${#}" '0'; then sed "s@^@${pfx}@"
  elif str empty "${cat:-}"; then printf -- "${pfx}%b\n" "${@}"
  elif is nonempty "${cat}"; then sed "s@^@${pfx}@" "${cat}"; fi 1>&3;
}

send () { if ge "${navy_loglevel}" "${lvl}"; then pfx="${lvl}" _send "${@}"; fi; }

send_raw   () { pfx="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_rawlevel}"   _send "${@}"; }
send_error () { pfx="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_errorlevel}" _send "${@}"; }
send_warn  () { lvl="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_warnlevel}"   send "${@}"; }
send_info  () { lvl="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_infolevel}"   send "${@}"; }
send_note  () { lvl="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_notelevel}"   send "${@}"; }
send_debug () { lvl="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_debuglevel}"  send "${@}"; }
send_verb  () { lvl="${buffered:+"${navy_bufreq}${navy_reqsep}${pid}${navy_reqsep}"}${navy_verblevel}"   send "${@}"; }

send_flush () { printf '%s%s%s%s\n' "${navy_flushreq}" "${navy_reqsep}" "${pid}" "${navy_reqsep}" 1>&3; }

send_spin ()  { printf '%s%s%s%s%s\n' "${navy_spinreq}" "${navy_reqsep}" "${1}" "${navy_reqsep}" "${2}" 1>&3; }
send_stop  () { printf '%s%s\n' "${navy_stopreq}" "${1}" 1>&3; }

help ()
{
  send_raw 'A Docker Engine orchestrator'                                     \
           ''                                                                 \
           'Usage:'                                                           \
           '  navy [options] [rules]'                                         \
           ''                                                                 \
           'Rules:'                                                           \
           '  TODO'                                                           \
           ''                                                                 \
           'Options:'                                                         \
           '  -f, --file file       navy main file (default: ./navy.yaml)'    \
           '  -r, --reset-cache     resets the cache'                         \
           '  -v                    verbosity, reusable (default: 3, max: 7)' \
           '  -h, --help            help for navy'                            \
           '  -V, --version         version for navy'
  return 1
}

version ()
{
  send_raw 'navy 0.1.0'
  return 1
}

help_option ()
{
  navy_help='true'
}

version_option ()
{
  navy_version='true'
}

reset_cache_option ()
{
  navy_resetcache='true'
}

file_option ()
{
  if not is present "${1}"
  then
    send_error "${1} does not exist"
    return 1
  elif not can read "${1}"
  then
    send_error "You do not have the permission to read ${1}"
    return 1
  fi
  navy_file="${1}"
}

v_option ()
{
  navy_loglevel="$(( ${navy_loglevel:--1} + 1 ))"
}

add_rule ()
{
  navy_userrules="${navy_userrules:-}${1} "
}

unknown_option ()
{
  send_error "Unknown rule/option: '${1}'"
  return 1
}

parse_options ()
{
  until eq "${#}" '0'
  do
    case "${1}" in

    # Handle '-abc' the same as '-a -bc' for short-form no-arg options
    ( -[hrvV]?* )
      IFS=' '
      set -f
      set -- "${1%"${1#??}"}" "-${1#??}" $(shift; printf '%s\n' "${@}")
      set +f
      IFS="${navy_ifs}"
      continue ;;

    # Handle '-foo' the same as '-f oo' for short-form 1-arg options
    ( -[f]?* )
      IFS=' '
      set -f
      set -- "${1%"${1#??}"}" "${1#??}" $(shift; printf '%s\n' "${@}")
      set +f
      IFS="${navy_ifs}"
      continue ;;

    # Handle '--file=file1' the same as '--file file1' for long-form 1-arg options
    ( --file=* )
      IFS=' '
      set -f
      set -- "${1%%=*}" "${1#*=}" $(shift; printf '%s\n' "${@}")
      set +f
      IFS="${navy_ifs}"
      continue ;;

    ( -r|--reset-cache ) reset_cache_option        ;;
    ( -f|--file )        file_option "${2}"; shift ;;
    ( -v )               v_option                  ;;
    ( -h|--help )        help_option               ;;
    ( -V|--version )     version_option            ;;
    ( * )                add_rule "${1}"           ;;
    esac
    shift
  done
}

prepare_curl ()
{
  navy_curlreqheader='http:/'
  navy_curlresp="${NAVY_RUN_PATH}/curlresponse.json"
  navy_curlopts="${navy_curlopts:+"${navy_curlopts:-}" }--silent --write-out %{http_code} --output ${navy_curlresp}"

  if str empty "${DOCKER_HOST:-}"
  then
    navy_curlopts="${navy_curlopts:+"${navy_curlopts}" }--unix-socket /var/run/docker.sock"
  else
    navy_curlreqheader="${navy_curlreqheader}/${DOCKER_HOST#*://}"
  fi

  readonly navy_curlreqheader navy_curlresp navy_curlopts
}

verbose_mode ()
{
  cp () { { set +x; } 2> /dev/null; if not command cp -v "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  ln () { { set +x; } 2> /dev/null; if not command ln -v "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  mkdir () { { set +x; } 2> /dev/null; if not command mkdir -v "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  mv () { { set +x; } 2> /dev/null; if not command mv -v "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  readlink () { { set +x; } 2> /dev/null; if not command readlink -v "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  rm () { { set +x; } 2> /dev/null; if not command rm -v "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  find () { { set +x; } 2> /dev/null; if not command find -D exec -D search "${@}" 2>&1 | send_verb; then return 1; fi; set -x; }
  yq () { { set +x; } 2> /dev/null; if not command yq -v -M "${@}"; then return 1; fi; set -x; }
  gomplate () { { set +x; } 2> /dev/null; if not command gomplate -V "${@}"; then return 1; fi; set -x; }
  navy_mkdiropts='-v'
  readonly navy_mkdiropts
}

prepare_logging ()
{
  if ge "${navy_loglevel}" "${navy_tracelevel}"; then set -x; fi
  if ge "${navy_loglevel}" "${navy_debuglevel}"; then navy_curlopts='--verbose'; fi
  if ge "${navy_loglevel}" "${navy_verblevel}"; then verbose_mode; fi
}

prepare ()
{
  navy_file="${navy_file:-./navy.yaml}"
  navy_loglevel="${navy_loglevel:-"${navy_infolevel}"}"

  send_note "Main file found: ${navy_file}"

  readonly navy_resetcache navy_file navy_loglevel navy_help navy_version navy_userrules

  prepare_logging
  prepare_curl
}

xtrace_safe ()
{
  if ge "${navy_loglevel}" "${navy_tracelevel}"; then { set +x; } 2> /dev/null; fi
  eval "${1}"
  if ge "${navy_loglevel}" "${navy_tracelevel}"; then set -x; fi
}

reset_buffer ()
{
  rm -rf "${navy_buffers}/${1}"
  mkdir -p "${navy_buffers}/${1}"
}

_curl ()
{
  local pid buffer out
  read -r pid < /proc/self/stat
  pid="${pid%% *}"
  reset_buffer "${pid}"
  buffer="${navy_buffers}/${pid}/0"
  readonly pid req

  if not out="$(set -f; IFS=' '; curl ${navy_curlopts} --stderr "${buffer}" "${@}" "${req}")"
  then
    if is present "${buffer}"
    then
      send_error "'${req}' HTTP response: ${out}"
      cat="${buffer}" send_error
    fi
    return 1
  fi

  if not eq "${out%"${out#?}"}" '2'
  then send_warn "'${req}' HTTP response: ${out}"; fi

  if is nonempty "${buffer}"
  then
    send_debug '[CURL] HTTP exchange between Navy and Docker Engine:'
    cat="${buffer}" send_debug
    send_debug '[CURL] JSON response from Docker Engine:'
    xtrace_safe "command yq -M -p 'json' -o 'json' ${navy_curlresp} | send_debug"
  fi
}

_yq ()
{
  local pid buffer
  read -r pid < /proc/self/stat
  pid="${pid%% *}"
  reset_buffer "${pid}"
  buffer="${navy_buffers}/${pid}/0"
  readonly pid

  if not yq -M "${@}" 2> "${buffer}"
  then
    send_error 'The YAML parser failed with this error:'
    if is present "${buffer}"; then cat="${buffer}" send_error; fi
    return 1
  elif lt "${navy_loglevel}" "${navy_verblevel}" && is nonempty "${buffer}"
  then
    send_warn 'The YAML parser succeed but returns this warning:'
    cat="${buffer}" send_warn
  elif is nonempty "${buffer}"
  then cat="${buffer}" send_verb; fi
}

_gom ()
{
  local pid buffer
  read -r pid < /proc/self/stat
  pid="${pid%% *}"
  reset_buffer "${pid}"
  buffer="${navy_buffers}/${pid}/0"
  readonly pid

  if not gomplate "${@}" 2> "${buffer}"
  then
    send_error 'The Go Template processor failed with this error:'
    if is present "${buffer}"
    then xtrace_safe "command yq -M -p 'json' -o 'json' ${buffer} | send_error"; fi
    return 1
  elif lt "${navy_loglevel}" "${navy_verblevel}" && is nonempty "${buffer}"
  then
    send_warn 'The Go Template processor succeed but returns this warning:'
    xtrace_safe "command yq -M -p 'json' -o 'json' ${buffer} | send_warn"
  elif is nonempty "${buffer}"
  then xtrace_safe "command yq -M -p 'json' -o 'json' ${buffer} | send_verb"; fi
}

build_request ()
{
  printf '%s/v%s%s\n' "${navy_curlreqheader}" "${navy_apiversion:-1.25}" "${1}"
}

get ()
{
  req="$(build_request "${req}")" _curl --request GET "${@}"
}

prepare_cache ()
{
  navy_cache_exploded="${navy_cache}/exploded.yaml"
  navy_cache_nods="${navy_cache}/nods.yaml"
  navy_cache_escaped="${navy_cache}/escaped.yaml"
  navy_cache_rendered="${navy_cache}/rendered.yaml"

  navy_cache_context="${navy_cache}/context"
  navy_cache_version_json="${navy_cache_context}/version.json"
  navy_cache_info_json="${navy_cache_context}/info.json"

  navy_cache_datasources="${navy_cache}/datasources"
  navy_cache_header="${navy_cache_datasources}/header"
  navy_cache_dsescaped="${navy_cache_datasources}/escaped.yaml"
  navy_cache_dsgathered="${navy_cache_datasources}/gathered.yaml"
  navy_cache_dsrendered="${navy_cache_datasources}/rendered.yaml"

  navy_cache_anchors="${navy_cache}/anchors"

  readonly navy_cache_exploded navy_cache_nods navy_cache_escaped navy_cache_rendered \
           navy_cache_context navy_cache_version_json navy_cache_info_json \
           navy_cache_datasources navy_cache_header navy_cache_dsescaped navy_cache_dsgathered navy_cache_dsrendered \
           navy_cache_anchors

  mkdir -p "${navy_cache_context}" "${navy_cache_datasources}" "${navy_cache_anchors}"

  send_note 'Preprocessing: Cache prepared'
}

explode_main_file ()
{
  _yq 'explode(.)' "${navy_file}" > "${navy_cache_exploded}"
  send_note 'Preprocessing: Main file exploded'
}

define_context_datasources ()
{
  req='/version' get
  mv -f "${navy_curlresp}" "${navy_cache_version_json}"

  navy_apiversion="$(_gom --datasource "version=${navy_cache_version_json}" --in '{{ (datasource "version").ApiVersion }}')"
  req='/version' get
  mv -f "${navy_curlresp}" "${navy_cache_version_json}"

  req='/info' get
  mv -f "${navy_curlresp}" "${navy_cache_info_json}"

  send_note 'Preprocessing: Context datasources defined'
}

write_datasources_header ()
{
  _yq '[.datasources[] | "{{ $" + .id + " := index (datasource \"header\") \"" + .source + "\" }}"] + ["{{ $INFO := (datasource \"info\") }}{{ $VERSION := (datasource \"version\") }}"] | join("")' "${navy_cache_exploded}" > "${navy_cache_header}"
  _yq '. |= del(.datasources)' "${navy_cache_exploded}" > "${navy_cache_nods}"
  send_note 'Preprocessing: Datasources header written'
}

expand_datasources_into_datasources ()
{
  local datasources gathered_sha rendered_sha i gathered escaped rendered
  i='0'
  gathered_sha='0'
  rendered_sha='1'
  datasources="$(_yq '[.datasources[].source] | join(" ")' "${navy_cache_exploded}")"

  set -f
  IFS=' '
  _yq -N '{filename: explode(.)} | ... style="single"' ${datasources} > "${navy_cache_dsrendered}.${i}"
  IFS="${navy_ifs}"
  set +f

  until eq "${gathered_sha}" "${rendered_sha}"
  do
    i="$(( ${i} + 1 ))"
    escaped="${navy_cache_dsescaped}.${i}"
    gathered="${navy_cache_dsgathered}.${i}"
    rendered="${navy_cache_dsrendered}.${i}"
    cp -f "${navy_cache_dsrendered}.$(( ${i} - 1 ))" "${gathered}"

    _yq '(.. | key = "{{ print \"" + key + "\" }}" | (select((key | line) == 1) | key = (load_str("'"${navy_cache_header}"'") | trim) + key)) |= .' "${gathered}" > "${escaped}"

    _gom --datasource "header=file:///${gathered}?type=application/yaml" --datasource "info=${navy_cache_info_json}" --datasource "version=${navy_cache_version_json}" --file "${escaped}" --out "${rendered}"

    gathered_sha="$(sha256sum "${gathered}")"
    gathered_sha="${gathered_sha%% *}"
    rendered_sha="$(sha256sum "${rendered}")"
    rendered_sha="${rendered_sha%% *}"
  done

  cp -f "${rendered}" "${navy_cache_dsrendered}"

  send_note 'Preprocessing: Datasources expanded'
}

expand_datasources_into_main ()
{
  cp -f "${navy_cache_header}" "${navy_cache_escaped}"

  # do not process templates into rules[].run[]
  _yq '(.. | key = "{{ print \"" + key + "\" }}") |= . | ((select(has("{{ print \"rules\" }}")) | .["{{ print \"rules\" }}"][]) |= (select(has("{{ print \"run\" }}")) | .["{{ print \"run\" }}"]) |= (.. | select (type == "!!str") |= "{{ print \"" + . + "\" }}"))' "${navy_cache_nods}" >> "${navy_cache_escaped}"
  _gom --datasource "header=${navy_cache_dsrendered}" --datasource "info=${navy_cache_info_json}" --datasource "version=${navy_cache_version_json}" --file "${navy_cache_escaped}" --out "${navy_cache_rendered}"

  send_note 'Preprocessing: Datasources expanded into main file'
}

expand_anchors ()
{
  # copy the filetree of the project
  set -f
  find "$(dirname -- "${navy_file}")" -mindepth 1 -not -path '*/.*' -type d -exec mkdir ${navy_mkdiropts:-} -p "${navy_cache_anchors}/"{} \;
  set +f

  _yq '.explode[] | .in as $in | ([(.anchors[] | load_str(.) | trim | sub("^---", "") | sub("\.\.\.$", "") | trim)] | join("\n")) + "\n" + (load_str(.in) | trim | sub("^---", "") | sub("\.\.\.$", "") | trim) | @yamld | explode(.) | .[] |= del(select(key != "rules" and key != "include")) | . * {"file": $in}' -s "\"${navy_cache_anchors}/\" + .file" "${navy_file}"

  send_note 'Preprocessing: Anchors exploded'
}

