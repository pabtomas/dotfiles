# chocolate theme:
color default            153       232
color date               69        default
color graph-commit       216       default
color id                 111       default
color "author "          105       default
color cursor             232       140       bold
color title-focus        45        default   bold
color title-blur         140       default   bold
color status             140       default
color main-tracked       205       default   bold
color main-head          120       default   bold
color main-remote        216       default   bold

color palette-0          120       default   bold
color palette-1          216       default   bold
color palette-2          45        default   bold
color palette-3          205       default   bold
color palette-4          140       default   bold
color palette-5          223       default   bold
color palette-6          196       default   bold
color palette-7          120       default   bold
color palette-8          216       default   bold
color palette-9          45        default   bold
color palette-10         205       default   bold
color palette-11         140       default   bold
color palette-12         223       default   bold
color palette-13         196       default   bold

color grep.file          69        default
color grep.line-number   42        default

set mouse = true

bind generic j move-down
bind generic k move-up

bind generic g  none
bind generic gg move-first-line
bind main    G  move-last-line
bind generic G  move-last-line

set main-view-date = relative-compact
set main-view-id = yes
set blame-view-date = relative-compact
