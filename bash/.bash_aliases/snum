function gc () {
  git clone "$@" && cd $(command ls -t | head -n1)
  local RET=$?
  local A=".gitignore"
  local B="${HOME}/.gitignore"
  [[ ${RET} -eq 0 && -f "${HOME}/.gitignore" ]] \
    && echo -e "$(cat ${A} ${B} 2> /dev/null | sort)\n$(cat ${A} \
      2> /dev/null)" | sort | uniq -u | grep -v -E '^[[:space:]]*$' \
        >> .gitignore
}

function gamp () {
  git add -A && git commit -m "$@" && git pull && git push
}

