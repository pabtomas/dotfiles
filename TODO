V2:
rename dotfiles -> workspaces
- rm deploy_setup.sh
- prompt.sh:
  - apt update,
  - apt upgrade,
  - apt automemove/purge
  - if Docker not installed:
    - install Docker
  - else:
    - stop all containers
    - rm all containers
    - prune system (& images)
